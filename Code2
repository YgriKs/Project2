using System;

class Program {
    static void Main(string[] args) {
		double s;
        double a = Convert.ToInt32(Console.ReadLine());
		
		if (a > 500 && a <= 1000) 
		{
			s = a * 0.97;
			Console.WriteLine(s);
		}
		else if (a > 1000)
		{
			s = a * 0.95;
				Console.WriteLine(s);
		}

    }
}
